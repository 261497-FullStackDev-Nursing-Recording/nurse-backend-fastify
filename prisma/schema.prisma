// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  SUPER_ADMIN
  ADMIN
  NURSE_ADMIN
  NURSE
  USER
}

enum Shift {
  MORNING
  EVENING
  NIGHT
}

model User {
  id              String          @id @default(uuid())
  f_name          String
  l_name          String
  username        String          @unique
  password        String
  role            Role            @default(USER)
  user_on_patient UserOnPatient[]
  records         Record[]
  created_at      DateTime        @default(now())
}

enum Status {
  STATUS_1
  STATUS_2
  STATUS_3
  STATUS_4
}

model Patient {
  id                String          @id @default(uuid())
  f_name            String
  l_name            String
  age               Int
  birthday          DateTime
  phone_number      String
  identification_id String
  an                String
  hn                String
  current_bed_number Int
  status            Status
  isQuit            Boolean
  user_on_patient   UserOnPatient[]
  records           Record[]
  created_at        DateTime @default(now())
}
model UserOnPatient {
  user       User    @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id    String
  patient    Patient @relation(fields: [patient_id], references: [id], onDelete: Cascade)
  patient_id String

  @@id([user_id, patient_id])
}

enum FieldCode {
  O_TEXT
  S_TEXT
  NDX_TEXT
  IHEAL_TEXT
  IREHAB_TEXT
  IPREVENT_TEXT
  IPROMOTE_TEXT
  IPHYCHO_TEXT
  E_TEXT
}

model Record {
  id           String   @id @default(uuid())
  created_by   User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  user_id      String
  patient      Patient  @relation(fields: [patient_id], references: [id], onDelete: Cascade)
  patient_id   String
  bed_number   Int?
  ward         String?
  disease_group String?
  shift        Shift?
  visit_number String?
  fields       Field[] 
  created_at   DateTime @default(now())
  modified_at  DateTime @updatedAt
}

model Field {
  id               String         @id @default(uuid())
  record           Record         @relation(fields: [record_id], references: [id], onDelete: Cascade)
  record_id        String
  field_type       FieldCode
  field_pre_label  String?
  field_data       String
  field_date       DateTime?
  parents          FieldOnField[] @relation("ParentField")
  children         FieldOnField[] @relation("ChildrenField")
  created_at       DateTime       @default(now())
  modified_at      DateTime       @updatedAt
}

model FieldOnField {
  id        String @id @default(uuid())
  parent    Field  @relation("ParentField", fields: [parent_id], references: [id], onDelete: Cascade)
  parent_id String
  child     Field  @relation("ChildrenField", fields: [child_id], references: [id], onDelete: Cascade)
  child_id  String
}